<div class="container">
	<div class="row">

		<div class="col-sm-8">
			<% if current_user.nil? %>
			<h2>Your contact details</h2>
			<hr>
			<span>You are not authorized. Please, login or sign up:</span>
			   <a href="/users/sign_up" data-toggle="modal" data-target="#log-in-modal">Login</a> <span>or</span>
			   <a href="/users/sign_in" data-toggle="modal" data-target="#sign-up-modal">Sign up</a>
			  <hr>
			<% else %>
			<h2>Making an order</h2> 
			<hr>
			<div>
			  <%= form_with url: orders_path, method: :post do |f| %>
          <div class = "form-group">
            <%= f.label :city %>
            <%= f.text_field 'order[city]', class: 'form-control' %>
          </div>

          <div class = "form-group">
            <%= f.label :address %>
            <%= f.text_field 'order[address]', class: 'form-control' %>
          </div>
          <%= f.submit "I confirm the order", class: "btn btn-primary" %>
        <%end%>
		  </div>
		  <%end%>
		</div>


		<div class="com-sm-4">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Total:</h5>
					<div class = "form-inline">
				    <span><%= pluralize(cart.cart_items.count, 'item') %> in total</span> 
					  <span class="total-price-card"><%=cart.total_price %></span><i class = "fas fa-hryvnia"></i><br>
					<div>
	
				</div>
			</div>
		</div>	
	</div>
</div>