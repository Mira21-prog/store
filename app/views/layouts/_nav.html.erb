      <div class = "row navmenu"> 
      	<% Category.where(parent_id: nil).each do |category| %>
          <div class="dropdown show">
        	  <a class="nav-link font-weight-bold" href="" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= category.name %></a>
        	    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        	      <% category.subcategories.each do |sub|%>
        	  	    <a class="dropdown-item" href="/search?q=<%= sub.id%>" value = ""><%= sub.name %></a> 
        	  	  <% end %>
        	    </div>
          </div>
        <% end %>
      </div>